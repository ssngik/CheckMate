<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GoalCreateCompleteFragment">

        <TextView
            android:id="@+id/check_my_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_my_goal_page_title"
            style="@style/main_name"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp"
            android:background="@color/main_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="320dp"
                android:layout_height="18dp"
                android:text="@string/Category_spinner"
                android:layout_marginTop="28dp"
                style="@style/check_my_goal_page"
                />

            <TextView
                android:id="@+id/content_category"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:text="@string/Category_spinner"
                android:gravity="center_vertical"
                style="@style/check_my_goal_page_contents"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_main"
                />

            <TextView
                android:layout_width="320dp"
                android:layout_height="18dp"
                android:text="@string/goal_name_text"
                android:layout_marginTop="28dp"
                style="@style/check_my_goal_page"
                />

            <TextView
                android:id="@+id/content_title"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:text="@string/goal_name_text"
                android:gravity="center_vertical"
                style="@style/check_my_goal_page_contents"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_main"
                />

            <TextView
                android:layout_width="320dp"
                android:layout_height="18dp"
                android:text="@string/period_text"
                android:layout_marginTop="28dp"
                style="@style/check_my_goal_page"
                />

            <TextView
                android:id="@+id/content_period"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:text="@string/period_text"
                android:gravity="center_vertical"
                style="@style/check_my_goal_page_contents"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_main"
                />


            <TextView
                android:layout_width="320dp"
                android:layout_height="18dp"
                android:text="@string/certification_time_text"
                android:layout_marginTop="28dp"
                style="@style/check_my_goal_page"
                />

            <TextView
                android:id="@+id/content_time"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:text="@string/certification_time_text"
                android:gravity="center_vertical"
                style="@style/check_my_goal_page_contents"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_main"
                />

            <TextView
                android:layout_width="320dp"
                android:layout_height="18dp"
                android:text="@string/check_days"
                android:layout_marginTop="28dp"
                style="@style/check_my_goal_page"
                />

            <TextView
                android:id="@+id/content_weekdays"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:text="@string/check_days"
                android:gravity="center_vertical"
                style="@style/check_my_goal_page_contents"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_main"
                />

        </LinearLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_invite_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_main"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="28dp"
                android:text="@string/invite_teammate"
                style="@style/main_btn_text"
                />

            <TextView
                android:id="@+id/action_to_main_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/go_to_main_text"
                app:layout_constraintTop_toBottomOf="@id/btn_invite_friend"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/alert_information"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
