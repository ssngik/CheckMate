<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InviteUserFragment">

    <TextView
        android:id="@+id/setting_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main_font"
        android:gravity="center"
        android:text="@string/invite_teammate"
        android:textColor="@color/light_text"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/search_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/main_font"
        android:paddingVertical="100dp"
        android:text="@string/find_teammate"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_member"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp">

        <EditText
            android:id="@+id/inputUserName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:fontFamily="@font/main_font"
            android:gravity="center_horizontal"
            android:hint="@string/enter_nickname"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/do_invite_button"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_font"
            android:text="@string/invite_teammate_button" />
    </LinearLayout>
</RelativeLayout>