<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15dp"
    android:paddingBottom="?attr/actionBarSize"
    tools:context=".fragment.MainPageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="false"
        tools:context=".fragment.InviteResponseFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/goal_period_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:gravity="center"
                android:text="@string/invite_request"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/set_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goal_period_create"
                android:layout_centerInParent="true"
                android:fontFamily="@font/main_font"
                android:paddingVertical="20dp"
                android:text="@string/invite_msg"
                android:textSize="20sp" />

            <Button
                android:id="@+id/accept_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/set_date_text"
                android:layout_alignStart="@+id/set_date_text"
                android:background="@drawable/ripple_effect"
                android:backgroundTint="#c8c8c8"
                android:fontFamily="@font/main_font"
                android:text="@string/accept" />

            <Button
                android:id="@+id/reject_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/set_date_text"
                android:layout_alignEnd="@+id/set_date_text"
                android:background="@drawable/ripple_effect"
                android:backgroundTint="#c8c8c8"
                android:fontFamily="@font/main_font"
                android:text="@string/deny" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>