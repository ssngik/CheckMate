<resources>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_bar</item>
        <item name="colorPrimaryDark">@color/green_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--리사이클러뷰 아이템-->
    <style name="recyclerview_item">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>


    <!--로그인 화면 인사말-->
    <style name="with_friend">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <!--목표 확인 페이지 항목-->
    <style name="check_my_goal_page">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>


    <style name="progressbar_color">
        <item name="colorAccent">@color/checkmate_color</item>
    </style>

    <!--목표 확인 페이지 세부 내용-->
    <style name="check_my_goal_page_contents">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="WeekdaysCheckBox">
        <item name="android:buttonTint">@color/checkmate_color</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!--Hint Text-->
    <style name="hint_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ABABAB</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>


<!--    닉네임 조건 미충족-->
    <style name="alert_nickname_error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF7676</item>
    </style>

    <!--    닉네임 조건 부합-->
    <style name="alert_information">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6E86FF</item>
    </style>

    <style name="start_checkmate">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <!--닉네임 설정 화면-->
    <style name="set_nickname">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--    목표 생성화면 폰트-->
    <style name="create_goal_page_font">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <!--    메인화면 사용자 닉네임-->
    <!--    목표 생성 타이틀-->
    <style name="main_name">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">#6E86FF</item>
    </style>

    <!--캘린더 요일-->
    <style name="calendar_weekdays_font">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">#121212</item>
    </style>

<!--    날짜-->
    <style name="calendar_date_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#858585</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>


    <!--    메인화면 인사-->
    <style name="main_greeting">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--    메인화면 인사-->
    <style name="invite_main">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="fill_text">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">#424242</item>
    </style>

    <!--    다이얼로그-->
    <style name="dialog_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="dialog_body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <!--    다이얼로그-->

    <style name="main_btn_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="main_my_goals">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>



    <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- 색상 변환 -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 폰트 변환 -->
        <item name="fontFamily">@font/main_font</item>
        <!-- 직접 입력 버튼 숨김 -->
        <item name="materialCalendarHeaderToggleButton">@style/CalendarToggleButton</item>
    </style>

    <style name="CalendarToggleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>